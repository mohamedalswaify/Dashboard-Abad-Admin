@model IEnumerable<WebApplicationAbad.Areas.AdminCoursesData.Models.SessionsRecord>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "GetSession";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    a {
        font-weight: bold !important;
    }

    .conect {
        text-decoration: solid;
        color: #095F90;
    }

    th, td {
        color: #095F90 !important
    }

    .butn {
        width: 100px;
    }

    tr {
        border-bottom: 1px solid #ffc10773
    }

    .cards {
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px !important;
        padding: 20px
    }

    .display{
        display:none
    }
</style>
</header>
<section>
    <div class="container py-5">

        <div class="row">
            <div class="col-lg-12">
                <div class="cards mb-4" style="padding: 20px; font-weight: bold;">
                    <div class="card-body">
                        <h3 class="text-warning"> الاجتماعات والتسجيلات</h3>
                        <p>يتم تنزيل رابط تسجيل المحاضره بعد انتهاء المحاضره بعدة ساعات</p>
                        <div class="conect" style="padding: 10px;">

                            <table class="table mt-5">
                            <thead>
                                <tr>
                                    <th> الاسبوع</th>
                                    <th>اليوم</th>
                                    <th>رابط المحاضرة</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td> @item.sessionsDay.SessionsWeek.Name</td>
                                        <td>@item.sessionsDay.NameOfDay </td>
                                            <td> <a href="javascript:void(0);" class="btn btn-warning" onclick="openLecture('@item.Title')" style="color: #095F90 !important;">رابط المحاضرة</a> </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                            <iframe id="lectureIframe" width="100%" height="600" class="display" style="border: none;"></iframe>
                    </div>
                </div>
            </div>
</section>



<script>
    function openLecture(url) {
        document.getElementById("lectureIframe").src = url;
        document.getElementById("lectureIframe").classList.remove("display");

    }
</script>



