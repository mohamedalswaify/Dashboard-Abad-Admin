@model WebApplicationAbad.Areas.Setting.Data.Comment

@{

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Delete Comment";
}

<h1>Delete Comment</h1>

<h3>Are you sure you want to delete this comment?</h3>
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Student Name
        </dt>
        <dd class="col-sm-10">
            @Model.StudentName
        </dd>
        <dt class="col-sm-2">
            Job
        </dt>
        <dd class="col-sm-10">
            @Model.Studentjob
        </dd>
        <dt class="col-sm-2">
            Comment
        </dt>
        <dd class="col-sm-10">
            @Model.comment
        </dd>
        <dt class="col-sm-2">
            Evaluation
        </dt>
        <dd class="col-sm-10">
            @Model.evaluation
        </dd>
        <dt class="col-sm-2" hidden>
            Created Date
        </dt>
        <dd class="col-sm-10" hidden>
            @Model.CreatedDate.ToString("yyyy-MM-dd")
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
