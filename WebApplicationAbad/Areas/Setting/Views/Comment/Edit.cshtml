@model WebApplicationAbad.Areas.Setting.Data.Comment
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Edit Comment";
}

<h1>Edit Comment</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="StudentName"></label>
        <input asp-for="StudentName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Studentjob"></label>
        <input asp-for="Studentjob" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="comment"></label>
        <textarea asp-for="comment" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="evaluation"></label>
        <input asp-for="evaluation" class="form-control" />
    </div>
    <div class="form-group" hidden>
        <label asp-for="CreatedDate"></label>
        <input asp-for="CreatedDate" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
