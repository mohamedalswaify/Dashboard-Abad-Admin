@using WebApplicationAbad.Areas.AdminCoursesData.Models;
@model IEnumerable<SessionsRecord>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "GetListOfZoom";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-12 myrow">
    <partial name="_Notfactions" />
    <div class="card">
        <div class="card-header">
            <div class="text-start">
                <a class="btn btn-outline-primary" asp-action="Create">اضافه  <i class="fa-solid fa-plus"></i> </a>
            </div>
            <h2 class="card-title">قائمه المحاضرات Zoom  </h2>
        </div>
        <div class="p-3 col-4">
            <input type="text" id="searchInput" class="form-control" oninput="searchTable()" placeholder="Search.....">
        </div>
        <form asp-action="Index" id="myTable" onsubmit="return AllBool()">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>م</th>
                        <th>رقم الميتنج</th>
                        <th>المدرب</th>

                        <th>الدوره </th>
                        <th>الاسبوع</th>
                        <th>
                            اليوم
                        </th>
                        <th>
                            الرابط
                        </th>
                        <th>
                            تاكيد الجلسه
                        </th>


                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>  @item.Id</td>
                            <td>  @item.MeatingId</td>
                            <td>  @item.CoursesScheduless.Trainer.NameAr</td>
                            <td>  @item.CoursesScheduless.StartDate @item.CoursesScheduless.CoursesData.HeaderAr</td>
                            <td>  @item.sessionsDay.SessionsWeek.Name</td>
                            <td>  @item.sessionsDay.NameOfDay</td>
                            <td>  @item.Title</td>
                            <td>@item.IsReplcesing</td>
                            <td class="table-action">
                                <a class="btn btn-success" asp-action="Create" asp-route-id="@item.Id"><i class="align-middle" data-feather="edit-2"></i></a>
                                <button type="submit" class="btn btn-danger" asp-route-id="@item.Id"><i class="align-middle" data-feather="trash"></i></button>
                                <a class="btn btn-primary" asp-action="GetCoursesDataDetils" asp-route-id="@item.Id">
                                    <i class="align-middle" data-feather="trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>

    </div>
</div>